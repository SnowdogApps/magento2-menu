<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="topmenu_generic">
            <block name="topmenu.mobile" class="Snowdog\Menu\Block\Menu">
                <arguments>
                    <argument name="menu" xsi:type="string">hyva-topmenu-mobile</argument>
                </arguments>
            </block>
            <block name="topmenu.desktop" class="Snowdog\Menu\Block\Menu">
                <arguments>
                    <argument name="menu" xsi:type="string">hyva-topmenu-desktop</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer-content">
            <block name="menu-footer" class="Snowdog\Menu\Block\Menu" before="-">
                <arguments>
                    <argument name="menu" xsi:type="string">hyva-menu-footer</argument>
                </arguments>
            </block>
            <referenceBlock
                name="footer-static-links"
                remove="true"
            />
        </referenceBlock>
        <referenceBlock name="script-alpine-js">
            <block name="alpine-plugin-collapse" template="Snowdog_Menu::page/js/plugins/collapse.phtml"/>
        </referenceBlock>
    </body>
</page>
